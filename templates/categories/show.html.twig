{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="background-image d-flex justify-content-center align-items-center">
        <div class="card shadow-lg p-4" style="width: 28rem;">
            <h1 class="card-title text-center mb-4">Categories</h1>
            
            <table class="table table-bordered mb-4">
                <tbody>
                    <tr>
                        <th scope="row" class="bg-light">Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="bg-light">Name_category</th>
                        <td>{{ category.nameCategory }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between">
                <a href="{{ path('app_categories_index') }}" class="btn btn-secondary">back to list</a>
                <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-primary">edit</a>
            </div>

            {{ include('categories/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}