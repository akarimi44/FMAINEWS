{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administrateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-5"><i class="fas fa-cogs me-3"></i>Tableau de bord administrateur</h1>
    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <div class="card shadow h-100 border-start border-primary border-5">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="fas fa-file-alt me-2"></i>Gestion des articles</h5>
                    <p class="card-text text-muted">Gérez et organisez tous les articles de votre site.</p>
                    <a href="{{ path('app_posts_index') }}" class="btn btn-primary mt-2">
                        <i class="fas fa-eye me-2"></i>Articles
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card shadow h-100 border-start border-success border-5">
                <div class="card-body">
                    <h5 class="card-title text-success"><i class="fas fa-list-alt me-2"></i>Gestion des catégories</h5>
                    <p class="card-text text-muted">Créez, modifiez ou supprimez des catégories d'articles.</p>
                    <a href="{{ path('app_categories_index') }}" class="btn btn-success mt-2">
                        <i class="fas fa-sitemap me-2"></i>Catégories
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card shadow h-100 border-start border-info border-5">
                <div class="card-body">
                    <h5 class="card-title text-info"><i class="fas fa-users-cog me-2"></i>Gestion des utilisateurs</h5>
                    <p class="card-text text-muted">Contrôlez les comptes utilisateurs et leurs rôles.</p>
                    <a href="{{ path('app_user_index') }}" class="btn btn-info mt-2">
                        <i class="fas fa-user-plus me-2"></i>Utilisateurs
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card shadow h-100 border-start border-warning border-5">
                <div class="card-body">
                    <h5 class="card-title text-warning"><i class="fas fa-comments me-2"></i>Gestion des commentaires</h5>
                    <p class="card-text text-muted">Modérez et gérez tous les commentaires des visiteurs.</p>
                    <a href="{{ path('app_comments_index') }}" class="btn btn-warning mt-2">
                        <i class="fas fa-comment-dots me-2"></i>Commentaires
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card shadow h-100 border-start border-danger border-5">
                <div class="card-body">
                    <h5 class="card-title text-danger"><i class="fas fa-address-book me-2"></i>Gestion des contacts</h5>
                    <p class="card-text text-muted">Consultez les messages envoyés via le formulaire de contact.</p>
                    <a href="{{ path('app_contacts_index') }}" class="btn btn-danger mt-2">
                        <i class="fas fa-envelope-open-text me-2"></i>Contacts
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}