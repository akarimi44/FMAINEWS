{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Posts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Content</th>
                <th>Content1</th>
                <th>Content2</th>
                <th>Image</th>
                <th>Created_at_post</th>
                <th>Is_published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.subtitle }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.content1 }}</td>
                <td>{{ post.content2 }}</td>
                <td>{{ post.image }}</td>
                <td>{{ post.createdAtPost ? post.createdAtPost|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.isPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_posts_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_posts_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_posts_new') }}">Create new</a>
{% endblock %}
