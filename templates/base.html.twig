<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}Fmai News - Actualités sport, culture, économie & tech{% endblock %}</title>
    <meta name="description" content="{% block meta_description %}Fmai News - Retrouvez les dernières actualités sur le sport, la culture, l’économie, l’informatique et plus encore.{% endblock %}">
    <meta name="keywords" content="actualités, sport, culture, économie, informatique, news, Fmai News, France, Saint-Nazaire">
    <meta name="author" content="Fmai News">
    <meta name="robots" content="index, follow">

    <!-- Open Graph (Facebook & LinkedIn) -->
    <meta property="og:title" content="Fmai News - Actualités sport, culture, économie & tech">
    <meta property="og:description" content="Retrouvez les dernières actualités sur le sport, la culture, l’économie, l’informatique et plus encore.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:image" content="{{ asset('uploads/images/news.png') }}">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Fmai News - Actualités sport, culture, économie & tech">
    <meta name="twitter:description" content="Toute l’actualité en sport, culture, économie et informatique sur Fmai News.">
    <meta name="twitter:image" content="{{ asset('uploads/images/news.png') }}">

    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,
        <svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22>
            <text y=%221.2em%22 font-size=%2296%22>⚫️</text>
            <text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>FN</text>
        </svg>">

    <!-- Canonical URL -->
    <link rel="canonical" href="{{ app.request.uri }}">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Germania+One&display=swap" rel="stylesheet">

    <!-- Styles personnalisés -->
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/css/navbar.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/home.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/adminList.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/categorie.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/show.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/register.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/login.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/footer.css') }}">
    {% endblock %}
</head>
<body class="main-body">
    {% include 'elements/header.html.twig' %}

    <main class="flex-fill">
        {% block body %}{% endblock %}
    </main>

    {% include 'elements/footer.html.twig' %}

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
